{% extends 'base.html.twig' %}

{% block title %}Acceuil
{% endblock %}

{% block body %}
	<div class="container">

		<table class="table table-striped">
			<a href="{{ path('app_create') }}" class="btn btn-primary my-5">Créer un nouveau utilisateur</a>
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Adresse</th>
					<th>Telephone</th>
					<th>Email</th>
					<th>Mot de passe</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>

			
			
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.adress }}</td>
						<td>{{ user.telephone }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.password }}</td>
						<td>
							<a href="{{ path('app_show', {'id': user.id}) }}" class="btn btn-success">show</a>
							<a href="{{ path('app_edit', {'id': user.id}) }}" class="btn btn-secondary">edit</a>
							<form action="{{ path('app_delete', {'id': user.id }) }}" method="post">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
								<button class="btn btn-danger">
									supprimer
								</buton>
							</form>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>

{% endblock %}
