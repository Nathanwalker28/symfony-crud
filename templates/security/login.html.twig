{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row my-5">
			<div class="col-md-3 ">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light p-3">
					<form method="post" action=" {{ path('app_login') }} ">

						<h1 class="h3 mb-3 font-weight-normal">Connectez-vous !</h1>
						{% if error %}
							<div class="alert alert-danger">adresse email ou mot de passe incorrect !</div>
						{% endif %}

						<div class="form-group">
							<label for="email">Adresse email</label>
							<input type="text" name="_username" id="email" class="form-control" value="{{ last_username }}" required>
						</div>

						<div class="form-group">
							<label for="password">Mot de passe</label>
							<input type="password" name="_password" id="password" class="form-control" required>
						</div>

						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{#
							        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
							        See https://symfony.com/doc/current/security/remember_me.html
							
							        <div class="checkbox mb-3">
							            <label>
							                <input type="checkbox" name="_remember_me"> Remember me
							            </label>
							        </div>
							    #}

						<button class="btn  btn-success my-3" type="submit">
							Se connecter
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
